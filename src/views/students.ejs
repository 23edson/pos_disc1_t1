<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap deps css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Bootstrap deps js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>


    <script>

        function deleteStudent(student) {

            fetch(`/students/${student}`, { method: 'DELETE' })

        }
    </script>
    <title>Alunos</title>
</head>

<body>
    <div style="max-width: 50%;" class="m-5 container border border-black p-1">
        <table class="table table-hover caption-top ">
            <caption>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="p-2">Aniversários dos alunos</div>
                    <div class="p-2">
                        <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal"
                            data-bs-target="#modal-cadastro">
                            Adicionar
                        </button>
                    </div>

            </caption>
            <thead class="table-dark ">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Data</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% if(!students.length){ %>
                    <tr class="text-center">
                        <td colspan="4">Nenhum registro encontrado</td>
                    </tr>
                    <% } %>
                        <% students.forEach((student, index)=> { %>
                            <tr>
                                <th scope="row">
                                    <%= index + 1%>
                                </th>
                                <td>
                                    <%= student.name %>
                                </td>
                                <td>
                                    <%= student.birthday %>
                                </td>
                                <td class="align-center">
                                    <a href="" onclick="deleteStudent('<%= student.id %>')" id="del_student"
                                        class="link-danger">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path
                                                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                            <path
                                                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>

            </tbody>
        </table>
    </div>


    <!-- Modal Bootstrap -->
    <div class="modal fade" id="modal-cadastro" tabindex="-1" aria-labelledby="modal-cadastro" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modal-cadastro">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" action="/students">
                    <div class="modal-body">
                        <div class="m-3">

                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    <label for="student" class="col-form-label">Nome aluno</label>
                                </div>
                                <div class="col-auto">
                                    <input type="text" id="student" name="student" class="form-control">
                                </div>

                            </div>
                        </div>
                        <div class="m-3">
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    <label for="birthday" class="col-form-label">Data aniversário</label>
                                </div>
                                <div class="col-auto">
                                    <input type="date" id="birthday" name="birthday" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>